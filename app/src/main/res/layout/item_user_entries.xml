<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relative_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">


            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/car_img2"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/cars"
                app:siShape="@drawable/corner_shape"
                 />


            <TextView
                android:id="@+id/badge_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:layout_marginTop="2.5dp"
                android:layout_marginStart="2.5dp"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:padding="4dp"
                android:text="6"
                android:textColor="@color/White"
                android:textSize="12sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/frwd_arrow"
                android:layout_toRightOf="@id/car_img2"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Realnews"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/txt_check_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check this picture of the accident on hyy98."
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved 20 min ago"
                    android:textAllCaps="false"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_status_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved"
                    android:textAllCaps="false"
                    android:textColor="@color/gree"
                    android:textSize="16sp" />


            </LinearLayout>


            <ImageView
                android:id="@+id/icon_download_cloud"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="70dp"
                android:visibility="gone"
                android:src="@drawable/icon_download_cloud" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_color_light">

        </View>


    </LinearLayout>

</RelativeLayout>