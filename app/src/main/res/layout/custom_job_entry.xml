<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginTop="10dp">

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/profile_detail_img"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"
                app:siShape="@drawable/corner_shape"
                android:src="@drawable/cars" />

            <TextView
                android:id="@+id/badge_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:layout_marginTop="2.5dp"
                android:layout_marginStart="2.5dp"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:padding="4dp"
                android:text="6"
                android:textColor="@color/White"
                android:textSize="12sp"
                android:visibility="visible" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/delete_img"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/delete_img"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/linear_profile"
                android:layout_toLeftOf="@id/delete_img"
                android:layout_toRightOf="@id/profile_detail_img"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check this picture of accident on hwy98 "
                    android:textColor="@color/black"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submitted 20 mins ago."
                    android:textColor="@color/grey_color_light"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/description_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:text="Awaiting for Approval"
                    android:textColor="#CC9900"
                    android:textSize="12sp" />



            </LinearLayout>




        </RelativeLayout>







    </LinearLayout>

</RelativeLayout>