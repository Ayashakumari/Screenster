<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:id="@+id/assinment_linear2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/edit_img"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/delete_img"
                android:layout_marginTop="5dp"
                android:src="@drawable/square_edit_outline"/>



            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/delete_img"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/delete_img"/>




            <ImageView
                android:id="@+id/frwd_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/delete_img"
               android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icons_more" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/linear_profile"
                android:layout_toLeftOf="@id/edit_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/real_new_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REAL NEWS"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/description_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:text="Please take picture of the accident on hwy98. You can submit upto 15 pictures but we are only going to chosse seven pictures."
                    android:textColor="@color/gray"
                    android:textSize="12sp" />



            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/linear_profile"
                android:layout_toRightOf="@id/profile_detail_img">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submitted 20 mins ago."
                    android:textSize="12sp"
                    android:id="@+id/submit_txt"
                    android:textColor="@color/grey_color_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiry Date: 20 sep 2018"
                    android:layout_below="@+id/submit_txt"
                    android:textSize="12sp"
                    android:id="@+id/expire_date_txt"
                    android:textColor="@color/grey_color_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry Posted: 20"
                    android:gravity="right"
                    android:id="@+id/epire_post_txt"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#CC9900"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved: 1"
                    android:gravity="right"
                    android:layout_below="@+id/epire_post_txt"
                    android:id="@+id/approved_status"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/green"/>


            </RelativeLayout>




        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#B8B7B7"/>


    </LinearLayout>

</RelativeLayout>