<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@mipmap/header">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp">

     <ImageView
         android:id="@+id/header_back"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_centerVertical="true"
         android:visibility="visible"
         android:src="@mipmap/headerback"

         />
    <ImageView
        android:id="@+id/header_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/header_menu"
        android:visibility="gone"

        />

        <TextView
            android:id="@+id/header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           android:layout_centerHorizontal="true"
            android:text="Member Login"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/chat_status"
            android:text="Typing.."
            android:layout_marginBottom="2dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_below="@+id/header_txt"
            android:textStyle="normal"

            android:textColor="@color/White"/>


    <ImageView
        android:id="@+id/header_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/header_search"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>


        <ImageView
            android:id="@+id/header_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/plus"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/count_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/header_search"
            android:text="1/7"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />





        <TextView
            android:id="@+id/friend_selected_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>


    </RelativeLayout>


</android.support.v7.widget.Toolbar>